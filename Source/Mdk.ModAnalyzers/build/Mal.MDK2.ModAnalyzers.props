<?xml version="1.0" encoding="utf-8"?>
<Project>
    <PropertyGroup>
        <!-- Default ignore paths (can be overridden in project file) -->
        <Mdk-IgnorePaths Condition="'$(Mdk-IgnorePaths)' == ''">**\*.debug.cs;obj\**\*</Mdk-IgnorePaths>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Update="Mal.Mdk2.ModAnalyzers" IncludeAssets="analyzers" />
    </ItemGroup>
    <ItemGroup>
        <CompilerVisibleProperty Include="ProjectDir"/>
        <CompilerVisibleProperty Include="Mdk-IgnorePaths"/>
    </ItemGroup>
</Project>