<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Normal (neutral/info) -->
    <StaticResource x:Key="MessageBoxNormalBackgroundBrush" ResourceKey="ThemeBackgroundBrush" />
    <StaticResource x:Key="MessageBoxNormalBorderBrush" ResourceKey="ThemeBorderLowBrush" />
    <StaticResource x:Key="MessageBoxNormalForegroundBrush" ResourceKey="ThemeForegroundBrush" />
    <StaticResource x:Key="MessageBoxNormalIconBrush" ResourceKey="ThemeForegroundLowBrush" />

    <!-- DANGER (destructive) — solid reds per theme; text/contrast from base palette -->
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <!-- Soft danger background + subtle red border for Light -->
            <SolidColorBrush x:Key="MessageBoxDangerBackgroundBrush" Color="#FFFDE7E9" />
            <SolidColorBrush x:Key="MessageBoxDangerBorderBrush" Color="#FFF1B2B5" />
            <SolidColorBrush x:Key="MessageBoxDangerForegroundBrush" Color="{DynamicResource SystemBaseHighColor}" />
            <SolidColorBrush x:Key="MessageBoxDangerIconBrush" Color="#FFB10E0E" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <!-- Space Theme - inspired by malforge.github.io -->
            
            <!-- Override FluentTheme Button resources -->
            <SolidColorBrush x:Key="ButtonBackground">#CC1a1a2e</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonBackgroundPressed">#FF16213e</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonBorderBrush">#33ffffff</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver">#FF007bff</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForeground">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundPointerOver">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundPressed">#FFd0d0d0</SolidColorBrush>
            <SolidColorBrush x:Key="ButtonForegroundDisabled">#FF909090</SolidColorBrush>
            
            <!-- Override FluentTheme TextBox resources -->
            <SolidColorBrush x:Key="TextControlBackground">#CC1a1a2e</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlBackgroundFocused">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlBorderBrush">#33ffffff</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver">#44ffffff</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlBorderBrushFocused">#FF007bff</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlForeground">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlPlaceholderForeground">#FF909090</SolidColorBrush>
            <SolidColorBrush x:Key="TextControlSelectionHighlightColor">#FF007bff</SolidColorBrush>
            
            <!-- Override FluentTheme ComboBox resources to match TextBox -->
            <SolidColorBrush x:Key="ComboBoxBackground">#CC1a1a2e</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBackgroundPressed">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBackgroundFocused">#DD16213e</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBorderBrush">#33ffffff</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver">#44ffffff</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBorderBrushPressed">#FF007bff</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxBorderBrushFocused">#FF007bff</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxForeground">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxForegroundFocused">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxForegroundPointerOver">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="ComboBoxPlaceHolderForeground">#FF909090</SolidColorBrush>
            
            <!-- Override general text/foreground -->
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush">#FFe0e0e0</SolidColorBrush>
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush">#FFd0d0d0</SolidColorBrush>
            <SolidColorBrush x:Key="TextFillColorTertiaryBrush">#FFb0b0b0</SolidColorBrush>
            
            <!-- Accent color -->
            <Color x:Key="SystemAccentColor">#FF007bff</Color>
            <Color x:Key="SystemAccentColorLight1">#FF4da6ff</Color>
            <Color x:Key="SystemAccentColorLight2">#FF80b3ff</Color>
            <Color x:Key="SystemAccentColorDark1">#FF0056b3</Color>
            
            <!-- Danger colors (keep existing) -->
            <SolidColorBrush x:Key="MessageBoxDangerBackgroundBrush" Color="#DD2a1a1a" />
            <SolidColorBrush x:Key="MessageBoxDangerBorderBrush" Color="#FFdc3545" />
            <SolidColorBrush x:Key="MessageBoxDangerForegroundBrush" Color="#FFe0e0e0" />
            <SolidColorBrush x:Key="MessageBoxDangerAccentBrush" Color="#FFff6b6b" />
            <SolidColorBrush x:Key="MessageBoxDangerIconBrush" Color="#FFD13438" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>