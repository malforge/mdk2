<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Space Theme Styles - matching malforge.github.io -->
    
    <!-- Window gradient background -->
    <Style Selector="Window">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#FF0a0a0a" Offset="0.0" />
                <GradientStop Color="#FF1a1a2e" Offset="0.5" />
                <GradientStop Color="#FF16213e" Offset="1.0" />
            </LinearGradientBrush>
        </Setter>
    </Style>
    
    <!-- Default Button Style - clean blue buttons like easter egg -->
    <Style Selector="Button">
        <Setter Property="Background" Value="#FF007bff" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="#FFffffff" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Cursor" Value="Hand" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF0056b3" />
        </Style>
        
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF004494" />
        </Style>
    </Style>
    
    <!-- Subtle variant for less prominent actions -->
    <Style Selector="Button.subtle">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFe0e0e0" />
        <Setter Property="FontWeight" Value="Normal" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#22ffffff" />
        </Style>
        
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#33ffffff" />
        </Style>
    </Style>
    
    <!-- Danger variant for destructive actions -->
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="#FFdc3545" />
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFc82333" />
        </Style>
        
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFbd2130" />
        </Style>
    </Style>
    
    <!-- Subtle danger for icon buttons - override solid red background -->
    <Style Selector="Button.subtle.danger">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="Button.subtle.danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#22ff4444" />
    </Style>
    
    <Style Selector="Button.subtle.danger:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#33ff4444" />
    </Style>
    
    <Style Selector="RadioButton">
        <Setter Property="Foreground" Value="#FFe0e0e0" />
    </Style>
    
    <Style Selector="TextBlock">
        <Setter Property="Foreground" Value="#FFe0e0e0" />
    </Style>
    
    <Style Selector="ScrollViewer">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="UserControl">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
</Styles>
