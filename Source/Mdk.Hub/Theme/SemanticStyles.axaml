<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    Semantic Color Modifiers
    
    These classes set ONLY color (Foreground property).
    Combine with Typography classes (.h1, .h2, .body, .caption, .label) for complete styling.
    
    Text Color Hierarchy:
    - .primary = Pure white (#ffffff) for emphasis
    - (default) = Body grey (#d0d0d0) for standard text  
    - .muted = Dimmer grey (#b0b0d0) for de-emphasized
    - .disabled = Most dim (#808080) for disabled state
    
    Semantic Colors:
    - .heading = Bright blue (#4da6ff) for section headings (H2)
    - .heading-light = Light blue (#80b3ff) for subsections (H3)
    - .accent = Interactive blue (#007bff) for links in prose
    - .success, .warning, .danger = State colors
    -->

    <!-- Text Color Modifiers -->
    
    <!-- Primary - Pure white for emphasis (H1 titles) -->
    <Style Selector="TextBlock.primary">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Muted - De-emphasized text -->
    <Style Selector="TextBlock.muted">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

    <!-- Disabled - Most de-emphasized -->
    <Style Selector="TextBlock.disabled">
        <Setter Property="Foreground" Value="{StaticResource TextDisabledBrush}" />
    </Style>

    <!-- Heading - Colored headings (H2) -->
    <Style Selector="TextBlock.heading">
        <Setter Property="Foreground" Value="{StaticResource AccentHeadingBrush}" />
    </Style>

    <!-- Heading Light - Lighter colored headings (H3) -->
    <Style Selector="TextBlock.heading-light">
        <Setter Property="Foreground" Value="{StaticResource AccentHeadingLightBrush}" />
    </Style>

    <!-- Accent - Interactive elements (links in prose) -->
    <Style Selector="TextBlock.accent">
        <Setter Property="Foreground" Value="{StaticResource AccentInteractiveBrush}" />
    </Style>

    <!-- Warning Text -->
    <Style Selector="TextBlock.warning">
        <Setter Property="Foreground" Value="{StaticResource AccentWarningBrush}" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

    <!-- Danger Text -->
    <Style Selector="TextBlock.danger">
        <Setter Property="Foreground" Value="{StaticResource AccentDangerBrush}" />
    </Style>

    <!-- Success Text -->
    <Style Selector="TextBlock.success">
        <Setter Property="Foreground" Value="{StaticResource AccentSuccessBrush}" />
    </Style>

    <!-- Monospace Text (code, paths, technical output) -->
    <Style Selector="TextBlock.monospace">
        <Setter Property="FontFamily" Value="Consolas,Courier New,monospace" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Monospace TextBox (readonly code/output display) -->
    <Style Selector="TextBox.monospace">
        <Setter Property="FontFamily" Value="Consolas,Courier New,monospace" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <!-- Container Styles -->

    <!-- Dialog/Modal Container -->
    <Style Selector="Border.dialog-container">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Background" Value="{StaticResource BackgroundDialogBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="24" />
    </Style>

    <!-- Drawer Header -->
    <Style Selector="Border.drawer-header">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="16,12" />
    </Style>

    <!-- Drawer Content Area -->
    <Style Selector="Border.drawer-content">
        <Setter Property="Background" Value="{StaticResource BackgroundPrimaryBrush}" />
    </Style>

    <!-- Warning Indicator (dot/ellipse) -->
    <Style Selector="Ellipse.warning-indicator">
        <Setter Property="Fill" Value="{StaticResource AccentWarningBrush}" />
        <Setter Property="Width" Value="8" />
        <Setter Property="Height" Value="8" />
    </Style>

    <!-- Page/Section Heading (larger than section-heading, for main titles) -->
    <Style Selector="TextBlock.page-title">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
    </Style>

    <!-- Button Variants -->

    <!-- Subtle button for less prominent actions -->
    <Style Selector="Button.subtle">
        <Setter Property="Background" Value="{StaticResource BorderSubtleColor}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="FontWeight" Value="Normal" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BorderDefaultColor}" />
        </Style>

        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource BorderDefaultColor}" />
        </Style>
    </Style>

    <!-- Danger button for destructive actions -->
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{StaticResource ButtonDangerColor}" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonDangerHoverColor}" />
        </Style>

        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{StaticResource ButtonDangerPressedColor}" />
        </Style>
    </Style>

    <!-- Success button for positive actions -->
    <Style Selector="Button.success">
        <Setter Property="Background" Value="{StaticResource AccentSuccessColor}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF34c759" />
        </Style>

        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#FF1e7e34" />
        </Style>
    </Style>

    <!-- Subtle danger - for subtle destructive actions -->
    <Style Selector="Button.subtle.danger">
        <Setter Property="Background" Value="#22ff6666" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#33ff6666" />
        </Style>

        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#44ff6666" />
        </Style>
    </Style>

    <!-- Subtle success - for subtle positive actions -->
    <Style Selector="Button.subtle.success">
        <Setter Property="Background" Value="#2228a745" />

        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3328a745" />
        </Style>

        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#4428a745" />
        </Style>
    </Style>

</Styles>