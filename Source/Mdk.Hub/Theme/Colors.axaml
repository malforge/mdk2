<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    Color Palette - Redesigned for consistency and clarity
    
    Design Principles:
    - 4-level text hierarchy (Primary/Body/Muted/Disabled)
    - Colored headings use accent colors, not grey text colors
    - Border thickness indicates importance (3px danger > 2px important > 1px standard)
    - Semantic colors have single clear purpose (selection ≠ accent ≠ interactive)
    -->

    <!-- Text Colors (4 levels - simplified from 6) -->
    <Color x:Key="TextPrimaryColor">#FFffffff</Color>       <!-- Pure white - Hero text, H1 titles -->
    <Color x:Key="TextBodyColor">#FFd0d0d0</Color>          <!-- Standard body text (was TextSecondaryColor) -->
    <Color x:Key="TextMutedColor">#FFb0b0b0</Color>         <!-- De-emphasized text (was TextTertiaryColor) -->
    <Color x:Key="TextDisabledColor">#FF808080</Color>      <!-- Disabled/tertiary text -->

    <!-- Semantic Accent Colors -->
    <Color x:Key="AccentInteractiveColor">#FF007bff</Color>      <!-- Interactive elements (buttons, links) -->
    <Color x:Key="AccentHeadingColor">#FF4da6ff</Color>          <!-- Section headings (H2) - from website -->
    <Color x:Key="AccentHeadingLightColor">#FF80b3ff</Color>     <!-- Subsection headings (H3) - from website -->
    <Color x:Key="AccentSuccessColor">#FF28a745</Color>          <!-- Success states - match website -->
    <Color x:Key="AccentWarningColor">#FFffc107</Color>          <!-- Warnings - yellow instead of orange -->
    <Color x:Key="AccentDangerColor">#FFff6666</Color>           <!-- Danger/destructive -->

    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimaryColor">#FF1a1a2e</Color>      <!-- Main window -->
    <Color x:Key="BackgroundSecondaryColor">#FF0f0f1a</Color>    <!-- Darker sections (drawer) -->
    <Color x:Key="BackgroundDialogColor">#FF1a1a2e</Color>       <!-- Dialogs (same as primary) -->
    <Color x:Key="BackgroundCardColor">#CC1a1a2e</Color>         <!-- Cards (80% opacity) -->
    <Color x:Key="BackgroundCardHoverColor">#DD1a1a2e</Color>    <!-- Card hover (same hue, more opaque) -->
    <Color x:Key="BackgroundCardSelectedColor">#EE1a1a2e</Color> <!-- Card selected (same hue, most opaque) -->
    <Color x:Key="BackgroundOverlayColor">#80000000</Color>      <!-- Modal overlay (50% black) -->

    <!-- Border Colors (simplified to 2 levels) -->
    <Color x:Key="BorderSubtleColor">#1affffff</Color>           <!-- Very light border (10% opacity) -->
    <Color x:Key="BorderDefaultColor">#33ffffff</Color>          <!-- Default border (20% opacity) -->

    <!-- Button Colors (reference accent colors to avoid duplication) -->
    <Color x:Key="ButtonPrimaryColor">#FF007bff</Color>          <!-- Primary button (same as AccentInteractiveColor) -->
    <Color x:Key="ButtonPrimaryHoverColor">#FF0056b3</Color>     <!-- Primary hover (same as AccentInteractiveHoverColor) -->
    <Color x:Key="ButtonPrimaryPressedColor">#FF004494</Color>   <!-- Primary pressed -->
    <Color x:Key="ButtonDangerColor">#FFdc3545</Color>           <!-- Danger button -->
    <Color x:Key="ButtonDangerHoverColor">#FFc82333</Color>      <!-- Danger hover -->
    <Color x:Key="ButtonDangerPressedColor">#FFbd2130</Color>    <!-- Danger pressed -->

</ResourceDictionary>