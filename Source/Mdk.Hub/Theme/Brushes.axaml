<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brushes created from Color resources -->

    <!-- Text Brushes (4 levels - simplified) -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />     <!-- White -->
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}" />         <!-- De-emphasized -->
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}" />   <!-- Disabled -->

    <!-- Semantic Accent Brushes -->
    <SolidColorBrush x:Key="AccentInteractiveBrush" Color="{StaticResource AccentInteractiveColor}" />
    <SolidColorBrush x:Key="AccentHeadingBrush" Color="{StaticResource AccentHeadingColor}" />
    <SolidColorBrush x:Key="AccentHeadingLightBrush" Color="{StaticResource AccentHeadingLightColor}" />
    <SolidColorBrush x:Key="AccentSuccessBrush" Color="{StaticResource AccentSuccessColor}" />
    <SolidColorBrush x:Key="AccentWarningBrush" Color="{StaticResource AccentWarningColor}" />
    <SolidColorBrush x:Key="AccentDangerBrush" Color="{StaticResource AccentDangerColor}" />

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundDialogBrush" Color="{StaticResource BackgroundDialogColor}" />
    <SolidColorBrush x:Key="BackgroundOverlayBrush" Color="{StaticResource BackgroundOverlayColor}" />

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}" />
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefaultColor}" />

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="DangerButtonBackgroundBrush" Color="{StaticResource ButtonDangerColor}" />
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="{StaticResource ButtonDangerHoverColor}" />

</ResourceDictionary>