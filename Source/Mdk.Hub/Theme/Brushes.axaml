<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    Brush Naming Convention:
    - Foreground*Brush = Text, icons, paths (any foreground element)
    - Background*Brush = Fills, backgrounds
    - Border*Brush = Borders, strokes
    
    Each brush has ONE purpose indicated by its prefix.
    -->

    <!-- Foreground Brushes - Neutral (text hierarchy) -->
    <SolidColorBrush x:Key="ForegroundPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="ForegroundBodyBrush" Color="{StaticResource TextBodyColor}" />
    <SolidColorBrush x:Key="ForegroundMutedBrush" Color="{StaticResource TextMutedColor}" />
    <SolidColorBrush x:Key="ForegroundDisabledBrush" Color="{StaticResource TextDisabledColor}" />

    <!-- Foreground Brushes - Semantic (colored foreground) -->
    <SolidColorBrush x:Key="ForegroundAccentBrush" Color="{StaticResource AccentInteractiveColor}" />
    <SolidColorBrush x:Key="ForegroundSuccessBrush" Color="{StaticResource AccentSuccessColor}" />
    <SolidColorBrush x:Key="ForegroundWarningBrush" Color="{StaticResource AccentWarningColor}" />
    <SolidColorBrush x:Key="ForegroundDangerBrush" Color="{StaticResource AccentDangerColor}" />

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundDialogBrush" Color="{StaticResource BackgroundDialogColor}" />
    <SolidColorBrush x:Key="BackgroundOverlayBrush" Color="{StaticResource BackgroundOverlayColor}" />
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="{StaticResource BackgroundCardColor}" />
    <SolidColorBrush x:Key="BackgroundCardHoverBrush" Color="{StaticResource BackgroundCardHoverColor}" />
    <SolidColorBrush x:Key="BackgroundCardSelectedBrush" Color="{StaticResource BackgroundCardSelectedColor}" />
    <SolidColorBrush x:Key="BackgroundInfoCardBrush" Color="{StaticResource BackgroundInfoCardColor}" />

    <!-- Border Brushes - Neutral -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}" />
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefaultColor}" />

    <!-- Border Brushes - Semantic (colored borders) -->
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource AccentInteractiveColor}" />
    <SolidColorBrush x:Key="BorderSuccessBrush" Color="{StaticResource AccentSuccessColor}" />
    <SolidColorBrush x:Key="BorderWarningBrush" Color="{StaticResource AccentWarningColor}" />
    <SolidColorBrush x:Key="BorderDangerBrush" Color="{StaticResource AccentDangerColor}" />

    <!-- Overlay Brushes (for hover effects and modal layers) -->
    <SolidColorBrush x:Key="OverlayHoverBrush" Color="{StaticResource OverlayHoverColor}" />
    <SolidColorBrush x:Key="OverlayDarkBrush" Color="{StaticResource OverlayDarkColor}" />
    <SolidColorBrush x:Key="OverlayLightSubtleBrush" Color="{StaticResource OverlayLightSubtleColor}" />
    <SolidColorBrush x:Key="OverlayLightBrush" Color="{StaticResource OverlayLightColor}" />
    <SolidColorBrush x:Key="OverlayLightStrongBrush" Color="{StaticResource OverlayLightStrongColor}" />

    <!-- NodifyM Theme Overrides - Integrate NodifyM with Hub theme -->
    <Color x:Key="NodifyEditor.BackgroundColor">#FF0f0f1a</Color>  <!-- BackgroundSecondaryColor -->
    <Color x:Key="GridLinesColor">#1affffff</Color>                <!-- BorderSubtleColor -->
    <Color x:Key="Node.BackgroundColor">#CC1a1a2e</Color>          <!-- BackgroundCardColor -->
    <Color x:Key="Node.BorderColor">#FF4da6ff</Color>              <!-- AccentInteractiveColor -->

    <!-- Background Brushes - Buttons -->
    <SolidColorBrush x:Key="BackgroundAccentBrush" Color="{StaticResource AccentPrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundAccentHoverBrush" Color="{StaticResource AccentPrimaryHoverColor}" />
    <SolidColorBrush x:Key="BackgroundAccentPressedBrush" Color="{StaticResource AccentPrimaryPressedColor}" />
    <SolidColorBrush x:Key="BackgroundSuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="BackgroundSuccessHoverBrush" Color="{StaticResource SuccessHoverColor}" />
    <SolidColorBrush x:Key="BackgroundSuccessPressedBrush" Color="{StaticResource SuccessPressedColor}" />
    <SolidColorBrush x:Key="BackgroundDangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="BackgroundDangerHoverBrush" Color="{StaticResource DangerHoverColor}" />
    <SolidColorBrush x:Key="BackgroundDangerPressedBrush" Color="{StaticResource DangerPressedColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleDangerBrush" Color="{StaticResource SubtleDangerColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleDangerHoverBrush" Color="{StaticResource SubtleDangerHoverColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleDangerPressedBrush" Color="{StaticResource SubtleDangerPressedColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleSuccessBrush" Color="{StaticResource SubtleSuccessColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleSuccessHoverBrush" Color="{StaticResource SubtleSuccessHoverColor}" />
    <SolidColorBrush x:Key="BackgroundSubtleSuccessPressedBrush" Color="{StaticResource SubtleSuccessPressedColor}" />

    <!-- Legacy aliases (backwards compatibility - will be removed) -->
    <SolidColorBrush x:Key="DangerButtonBackgroundBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="{StaticResource DangerHoverColor}" />

</ResourceDictionary>
