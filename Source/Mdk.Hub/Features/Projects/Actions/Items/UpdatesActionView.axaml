<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:items="clr-namespace:Mdk.Hub.Features.Projects.Actions.Items"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="120"
             x:Class="Mdk.Hub.Features.Projects.Actions.Items.UpdatesActionView"
             x:DataType="items:UpdatesAction">

    <Border Background="{StaticResource BackgroundInfoCardBrush}"
            BorderBrush="{StaticResource BorderAccentBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16"
            Margin="16,8">
        <StackPanel Spacing="12">
            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*">
                <i:Icon Value="fa-solid fa-download"
                        FontSize="20"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource ForegroundAccentBrush}" />
                
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <TextBlock Text="Updates Available" Classes="body medium" />
                    <TextBlock Text="{Binding StatusMessage}" Classes="caption" TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!-- Progress bar (when downloading) -->
            <ProgressBar IsVisible="{Binding IsDownloading}"
                         Value="{Binding DownloadProgress}"
                         Maximum="1"
                         Height="4" />

            <!-- Action buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <!-- Update Templates button -->
                <Button Content="Update Templates"
                        Command="{Binding UpdateTemplatesCommand}"
                        IsVisible="{Binding IsTemplateUpdateAvailable}"
                        Classes="success"
                        Padding="12,6" />

                <!-- Update Hub button (downloads only) -->
                <Button Content="{Binding UpdateHubButtonText}"
                        Command="{Binding UpdateHubCommand}"
                        IsVisible="{Binding IsHubUpdateAvailable}"
                        Classes="success"
                        Padding="12,6" />

                <!-- Install Now button (explicit user action) -->
                <Button Content="Install Now"
                        Command="{Binding InstallHubUpdateCommand}"
                        IsVisible="{Binding IsReadyToInstall}"
                        Classes="success"
                        Padding="12,6" />
            </StackPanel>
        </StackPanel>
    </Border>

</UserControl>
