<actions:ActionItemControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:actions="clr-namespace:Mdk.Hub.Features.Projects.Actions"
             xmlns:items="clr-namespace:Mdk.Hub.Features.Projects.Actions.Items"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="120"
             x:Class="Mdk.Hub.Features.Projects.Actions.Items.UpdatePackagesActionView"
             x:DataType="items:UpdatePackagesAction"
             TopEdge="Contained" BottomEdge="Contained">

    <Border Background="{StaticResource BackgroundInfoCardBrush}"
            BorderBrush="{StaticResource BorderAccentBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="16">
        <StackPanel Spacing="12">
            <!-- Header -->
            <Grid ColumnDefinitions="Auto,*">
                <i:Icon Value="fa-solid fa-box-open"
                        FontSize="20"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Foreground="{StaticResource ForegroundAccentBrush}" />
                
                <StackPanel Grid.Column="1" Margin="12,0,0,0" Spacing="4">
                    <TextBlock Text="MDK Package Updates" Classes="body medium" />
                    <TextBlock Text="Update MDK packages for this project or all projects" Classes="caption" TextWrapping="Wrap" />
                </StackPanel>
            </Grid>

            <!-- Action buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Update This Project"
                        Command="{Binding UpdateThisProjectCommand}"
                        Classes="success"
                        Padding="12,6" />
                <Button Content="Update All Projects"
                        Command="{Binding UpdateAllProjectsCommand}"
                        Classes="success"
                        Padding="12,6" />
            </StackPanel>
        </StackPanel>
    </Border>

</actions:ActionItemControl>
