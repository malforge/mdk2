<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Mdk.Hub.Framework.Controls">

    <!-- Section Title -->
    <Style Selector="TextBlock.section-title">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#FF4da6ff" />
    </Style>

    <!-- Create hover rows -->
    <Style Selector="Border.create-hover-row">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    
    <Style Selector="Border.create-hover-row:pointerover">
        <Setter Property="Background" Value="#18ffffff" />
    </Style>

    <!-- Info labels -->
    <Style Selector="TextBlock.info-label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#FFb0b0b0" />
    </Style>

    <Style Selector="TextBlock.info-value">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#FFe0e0e0" />
    </Style>

    <!-- Toolbar button -->
    <Style Selector="Button.toolbar-button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Foreground" Value="#FFe0e0e0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    
    <Style Selector="Button.toolbar-button:pointerover">
        <Setter Property="Background" Value="#22ffffff" />
    </Style>
    
    <Style Selector="Button.toolbar-button:pressed">
        <Setter Property="Background" Value="#33ffffff" />
    </Style>
    
    <Style Selector="Button.toolbar-button.danger:pointerover">
        <Setter Property="Background" Value="#22ff0000" />
        <Setter Property="Foreground" Value="#FFff6666" />
    </Style>
    
    <Style Selector="Button.toolbar-button.danger:pressed">
        <Setter Property="Background" Value="#33ff0000" />
    </Style>

    <!-- Action Buttons -->
    <Style Selector="Button.action-button">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style Selector="Button.action-button:pointerover">
        <Setter Property="Background" Value="#22ffffff" />
    </Style>

</Styles>
