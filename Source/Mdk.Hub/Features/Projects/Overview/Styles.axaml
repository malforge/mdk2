<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icons="clr-namespace:Mdk.Hub.Features.Projects.Overview.Icons"
        xmlns:controls="clr-namespace:Mdk.Hub.Framework.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="ItemsControl.project-list">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0,4,0,4" />
        <Setter Property="Margin" Value="0" />

        <Style Selector="^ .project-icon icons|Symbol">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="48" />
            <Setter Property="Background" Value="#CC1a1a2e" />
            <Setter Property="Foreground" Value="#FF4da6ff" />
            <Setter Property="Margin" Value="4" />
        </Style>
        

        <Style Selector="^ controls|SelectableCard.project-item">
            <Setter Property="Margin" Value="8,4,8,4" />
            
            <Style Selector="^.left">
                <Setter Property="Margin" Value="8,4,4,4" />
            </Style>
            <Style Selector="^.right">
                <Setter Property="Margin" Value="4,4,8,4" />
            </Style>

            <Style Selector="^ TextBlock.title">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="16,0,0,2" />
                <Setter Property="Foreground" Value="#FFe0e0e0" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
            
            <Style Selector="^:pointerover TextBlock.title">
                <Setter Property="Foreground" Value="#FF4da6ff" />
            </Style>
            
            <Style Selector="^:selected TextBlock.title">
                <Setter Property="Foreground" Value="#FF007bff" />
            </Style>
            
            <Style Selector="^ TextBlock.last-referenced">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="Foreground" Value="#FFb0b0b0" />
                <Setter Property="Margin" Value="16,2,0,0" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
        </Style>
    </Style>
</Styles>