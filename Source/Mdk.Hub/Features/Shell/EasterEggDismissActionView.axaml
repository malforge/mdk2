<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:Mdk.Hub.Features.Shell"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Mdk.Hub.Features.Shell.EasterEggDismissActionView"
             x:DataType="shell:EasterEggDismissAction">
    
    <UserControl.Styles>
        <Style Selector="Button.easter-button">
            <!-- No longer needed, easter egg buttons will use default style -->
        </Style>
        <Style Selector="Button.easter-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <!-- No longer needed -->
        </Style>
        <Style Selector="Button.easter-button:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <!-- No longer needed -->
        </Style>
    </UserControl.Styles>
    
    <Border Padding="8,4" Background="{StaticResource BorderLightColor}" Opacity="0.67" CornerRadius="4" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Disable Easter Egg:" 
                       FontSize="11"
                       VerticalAlignment="Center"
                       Classes="muted"/>
            
            <Button Content="For Today" 
                    Command="{Binding DisableForTodayCommand}"
                    Padding="6,3"
                    FontSize="11"/>
            <Button Content="Forever" 
                    Command="{Binding DisableForeverCommand}"
                    Padding="6,3"
                    FontSize="11"/>
        </StackPanel>
    </Border>
    
</UserControl>
