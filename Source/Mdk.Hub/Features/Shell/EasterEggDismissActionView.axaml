<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shell="clr-namespace:Mdk.Hub.Features.Shell"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Mdk.Hub.Features.Shell.EasterEggDismissActionView"
             x:DataType="shell:EasterEggDismissAction">
    
    <UserControl.Styles>
        <Style Selector="Button.easter-button">
            <Setter Property="Background" Value="#FF007bff"/>
            <Setter Property="Foreground" Value="#FFffffff"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style Selector="Button.easter-button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FF0056b3"/>
        </Style>
        <Style Selector="Button.easter-button:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#FF004494"/>
        </Style>
    </UserControl.Styles>
    
    <Border Padding="8,4" Background="#11FFFFFF" CornerRadius="4" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Disable Easter Egg:" 
                       FontSize="11"
                       VerticalAlignment="Center"
                       Foreground="#FFb0b0b0"/>
            
            <Button Content="For Today" 
                    Command="{Binding DisableForTodayCommand}"
                    Classes="easter-button"
                    Padding="6,3"
                    FontSize="11"
                    Cursor="Hand"/>
            <Button Content="Forever" 
                    Command="{Binding DisableForeverCommand}"
                    Classes="easter-button"
                    Padding="6,3"
                    FontSize="11"
                    Cursor="Hand"/>
        </StackPanel>
    </Border>
    
</UserControl>
