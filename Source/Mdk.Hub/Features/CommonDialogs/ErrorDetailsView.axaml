<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Mdk.Hub.Features.CommonDialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Mdk.Hub.Features.CommonDialogs.ErrorDetailsView"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="Transparent"
             x:DataType="local:ErrorDetailsViewModel">
    <Grid ColumnDefinitions="10*, 80*, 10*">
        <Border Classes="dialog-container"
                Grid.Column="1"
                Padding="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="700">
            <StackPanel>
                <TextBlock Text="{Binding Title}"
                           Classes="h1"
                           Margin="0,0,0,8" />
                <TextBlock Text="{Binding Message}"
                           Classes="body"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12" />
                <TextBox Text="{Binding Details}"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MaxHeight="300"
                         MinHeight="100"
                         Classes="monospace"
                         Margin="0,0,0,12" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8">
                    <Button Content="Copy to Clipboard"
                            Command="{Binding CopyToClipboardCommand}" />
                    <Button Content="OK"
                            Command="{Binding DismissCommand}"
                            IsDefault="True"
                            MinWidth="75" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
