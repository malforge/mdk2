<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:snackbars="clr-namespace:Mdk.Hub.Features.Snackbars"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="80"
        x:Class="Mdk.Hub.Features.Snackbars.SnackbarWindow"
        x:DataType="snackbars:SnackbarViewModel"
        WindowStartupLocation="Manual"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        CanResize="False"
        SizeToContent="WidthAndHeight">


    <Border Background="{StaticResource BackgroundDialogBrush}"
            BorderBrush="{StaticResource AccentSuccessBrush}"
            BorderThickness="2"
            CornerRadius="8"
            Padding="16,12"
            MinWidth="300"
            MaxWidth="500"
            BoxShadow="0 4 16 2 #40000000">

        <Grid ColumnDefinitions="*,Auto">
            <!-- Message and Actions -->
            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="{Binding Message}"
                           TextWrapping="Wrap"
                           Classes="primary"
                            />

                <ItemsControl ItemsSource="{Binding Actions}"
                              IsVisible="{Binding Actions.Count}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="snackbars:SnackbarActionViewModel">
                            <Button Content="{Binding Text}"
                                    Command="{Binding Command}"
                                    Classes="subtle success"
                                    Padding="8,4" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Close button -->
            <Button Grid.Column="1"
                    Content="âœ•"
                    Command="{Binding CloseCommand}"
                    Classes="subtle"
                    VerticalAlignment="Top"
                    Padding="8,4"
                    Margin="8,0,0,0" />
        </Grid>
    </Border>
</Window>